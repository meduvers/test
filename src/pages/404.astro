---
import Global from "../layouts/Global.astro";
---

<Global title="Página no encontrada (error 404)" , description="No se ha encontrado la página" keywords="">
    <main>
        <div class="container">
            <img src="/favicon.svg" alt="Logo de Eduvers" class="logo" />
            <p>Lo sentimos, la página que buscas no se encuentra disponible.</p>
            <p>(error 404)</p>
            <button onclick="window.location.href = '/'" class="btn">Volver al inicio</button>
        </div>
    </main>
</Global>

<style>
    body {
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 50px;
        color: var(--dark);
    }
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        border-radius: 10px;
    }
    .logo {
        max-width: 150px;
        margin: 0 auto 20px;
    }
    p {
        font-size: 18px;
        line-height: 1.6;
    }
    a {
        color: var(--color);
        text-decoration: none;
        font-weight: bold;
    }
    a:hover {
        text-decoration: underline;
    }
</style>
